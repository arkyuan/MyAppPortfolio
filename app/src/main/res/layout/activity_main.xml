<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/title_text"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_text"
        android:layout_marginTop="36dp"
        android:layout_alignStart="@+id/title_text"
        android:layout_alignEnd="@+id/title_text">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SPOTIFY STREAMER"
            android:onClick="spotifystreamer"
            android:id="@+id/spotifybtn"
            android:background="@drawable/my_button"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SCORES APP"
            android:onClick="scores"
            android:id="@+id/scoresbtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LIBRARY APP"
            android:onClick="library"
            android:id="@+id/librarybtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BUILD IT BIGGER"
            android:onClick="buildbigger"
            android:id="@+id/buildbiggerbtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="XYZ READER"
            android:onClick="xyzReader"
            android:id="@+id/xyzreaderbtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CAPSTONE: MY OWN APP"
            android:onClick="myownapp"
            android:id="@+id/myownappbtn"
            android:background="@drawable/capstone"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
