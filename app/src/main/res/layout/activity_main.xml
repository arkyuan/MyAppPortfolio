<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_text_name"
            android:id="@+id/title_text"
            android:textSize="@dimen/title_text"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/linear_margin"
             />

        <Button
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="@string/spotify_btn_name"
            android:onClick="spotifystreamer"
            android:id="@+id/spotifybtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="@string/scores_btn_name"
            android:onClick="scores"
            android:id="@+id/scoresbtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="@string/library_btn_name"
            android:onClick="library"
            android:id="@+id/librarybtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="@string/build_btn_name"
            android:onClick="buildbigger"
            android:id="@+id/buildbiggerbtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="@string/xyz_reader_btn_name"
            android:onClick="xyzReader"
            android:id="@+id/xyzreaderbtn"
            android:background="@drawable/my_button"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="@string/capstone_btn_name"
            android:onClick="myownapp"
            android:id="@+id/myownappbtn"
            android:background="@drawable/capstone"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>
